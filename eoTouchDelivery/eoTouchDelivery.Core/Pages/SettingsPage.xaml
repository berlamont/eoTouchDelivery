<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="eoTouchDelivery.Core.Pages.SettingsPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<ContentPage.Content>
		<StackLayout
			x:Name="_settingslistStack"
			Padding="10,10,10,10"
			HorizontalOptions="FillAndExpand">
			<ListView x:Name="_settingsdataList" RowHeight="110">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Padding="10,10,10,10" HorizontalOptions="FillAndExpand">
								<Grid
									x:Name="_settingslistGrid"
									HorizontalOptions="FillAndExpand"
									RowSpacing="10">
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto" />
										<RowDefinition Height="Auto" />
									</Grid.RowDefinitions>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto" />
									</Grid.ColumnDefinitions>
									<Label
										Grid.Row="0"
										Grid.Column="0"
										FontAttributes="Bold"
										Text="{Binding Activity}"
										TextColor="Black" />
									<Label
										Grid.Row="1"
										Grid.Column="0"
										Text="{Binding ActivityValue}"
										TextColor="Gray"
										VerticalOptions="End" />
								</Grid>
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>

	</ContentPage.Content>
</ContentPage>