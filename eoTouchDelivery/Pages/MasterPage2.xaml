<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="eoTouchDelivery.Core.Pages.MasterPage2"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<Label
		HorizontalOptions="Center"
		Text="{Binding MainText}"
		VerticalOptions="Center" />
	<ContentPage.Content>
		<StackLayout>
			<StackLayout BackgroundColor="#EEEEEE">
				<StackLayout
					x:Name="HeadderStack"
					Padding="10,5,5,5"
					HorizontalOptions="FillAndExpand"
					Orientation="Horizontal">
					<StackLayout.BackgroundColor>
						<OnPlatform
							x:TypeArguments="Color"
							Android="#4cb7db"
							WinPhone="#4cb7db"
							iOS="#4cb7db" />
					</StackLayout.BackgroundColor>
					<Image
						Margin="0,0,0,15"
						Source="icon.png"
						VerticalOptions="End" />
					<Label
						Margin="10,0,0,25"
						FontAttributes="Bold"
						FontSize="Small"
						HorizontalTextAlignment="Start"
						IsVisible="true"
						Text="ROUTE 435"
						TextColor="White"
						VerticalOptions="End" />
					<Image
						Margin="0,0,0,15"
						HorizontalOptions="EndAndExpand"
						Source="icon.png"
						VerticalOptions="End" />
				</StackLayout>
				<StackLayout
					x:Name="_menulistStack"
					Padding="10,10,10,10"
					HorizontalOptions="FillAndExpand">
					<ListView x:Name="_settingsdataList" RowHeight="110">
						<DataTemplate>
							<ViewCell />
						</DataTemplate>
					</ListView>
				</StackLayout>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>